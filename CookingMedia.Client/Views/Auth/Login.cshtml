@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

@section Scripts
{
    <script src="@Url.Content("~/lib/jquery-validation/dist/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/js/login.js")"></script>
    <script>
        $(document).ready(registerLoginValidation)
    </script>
}

<h2>Login</h2>
<form id="loginForm" method="post">
    <p class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input id="email" class="form-control" name="email"/>
    </p>
    <p class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input id="password" class="form-control" type="password" name="password"/>
    </p>
    <button type="submit" class="btn btn-info" id="loginBtn">Login</button>
    <span class="text-danger" id="error"></span>
</form>