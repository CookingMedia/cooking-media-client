@{
    ViewBag.Title = "Ingredient";
    Layout = "_Layout";
}

@section Scripts
{
    <script>
        let url = new URL("http://localhost:5260/v1/ingredient");
        $("#searchBtn").on('click', () => search(url));
    </script>
}

<h2>Ingredient</h2>
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Manage <b>Products</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <a href="/TODO" class="btn btn-success" data-toggle="modal">
                            <i class="material-icons">&#xE147;</i> <span>Add New Product</span>
                        </a>
                    </div>
                </div>
            </div>
            <div>
                <form id="searchForm">
                    <div class="row mb-3">
                        <div class="col-6">
                            <label for="ingredientNameInp" class="form-label">Ingredient name</label>
                            <input class="form-control" id="ingredientNameInp" name="name"/>
                        </div>
                        <div class="col-6">
                            @* TODO: ingredient category *@
                            <label for="unitPriceInput" class="form-label">Ingredient category</label>
                            <input class="form-control" id="unitPriceInput" name="ingredientCategoryId"/>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" id="searchBtn">Search</button>
                </form>
            </div>
            <table class="table table-striped table-hover">
                <caption>List of ingredient</caption>
                <thead>
                <tr id="tableHeader">
                    <th data-for="id">Id</th>
                    <th data-for="name">Name</th>
                    <th data-for="image">Image</th>
                    <th data-for="ingredientCategory.name">Category</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody id="resultBody"> </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">Showing <b id="countLabel"></b> out of <b id="totalLabel"></b> entries</div>
                <ul class="pagination" id="pagingArea"> </ul>
            </div>
        </div>
    </div>
</div>